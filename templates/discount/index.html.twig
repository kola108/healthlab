{% extends 'base.html.twig' %}

{% block title %}Discount{% endblock %}

{% block body %}
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    </style>

    <div class="example-wrapper">

        <a href="{{ path('discount_add') }}">Add discount</a>

        {% for item in list  %}
            <h2>{{ item.name }}</h2>
            <p>percentage: <span>{{ item.percentage }}</span></p>
            <a href="{{ path('discount_delete', {'discountId': item.id}) }}">Delete discount</a>
            <a href="{{ path('discount_edit', {'discountId': item.id}) }}">Edit discount</a>
        {% endfor %}
    </div>
{% endblock %}
