{% extends 'base.html.twig' %}

{% block title %}Discount{% endblock %}

{% block body %}
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    </style>

    <div class="example-wrapper">

        {% if is_granted('ROLE_ADMIN') or is_granted('IS_AUTHENTICATED_FULLY') %}
            <a href="{{ path('review_add') }}">Add item</a>
        {% else %}
            <button>Add item</button>
        {% endif %}

        {% for item in list  %}
            <h2>{{ item.description }}</h2>

            {% if is_granted('ROLE_ADMIN') %}
                <a href="{{ path('review_delete', {'reviewId': item.id}) }}">Delete item</a>
                <a href="{{ path('review_edit', {'reviewId': item.id}) }}">Edit item</a>
            {% endif %}

        {% endfor %}
    </div>
{% endblock %}
