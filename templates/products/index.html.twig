{% extends 'base.html.twig' %}

{% block title %}Discount{% endblock %}

{% block body %}
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    </style>

    <div class="example-wrapper">

        <a href="{{ path('product_add') }}">Add item</a>

        {% for item in list  %}
            name: <h2>{{ item.nameFull }}</h2>
            description: <p>{{ item.description }}</p>
            price: <p>{{ item.priceBase }}</p>
            {% for bodySystem in item.bodySystems %}
                body system: <p>{{ bodySystem.name }}</p>
            {% endfor %}
            {% for medicationGoal in item.medicationGoals %}
                body system: <p>{{ medicationGoal.name }}</p>
            {% endfor %}
            product type: <p>{{ item.productType }}</p>

            <a href="{{ path('product_delete', {'productId': item.id}) }}">Delete item</a>
            <a href="{{ path('product_edit', {'productId': item.id}) }}">Edit item</a>
        {% endfor %}
    </div>
{% endblock %}
